---
import Section from "./Section.astro";
---

<Section
  title="Básica"
  subtitle="Da un paso hacia el futuro"
  color="black"
  id="model-basic"
>
  <div slot="footer" class="gap-x-6 flex mx-auto">
    <a
      class="border-[3px] border-gray-600 bg-gray-600 text-sm rounded font-medium text-white px-12 py-2 inline-block transition-colors hover:border-gray-500 hover:bg-gray-500"
      href="#"
    >
      Pedido personalizado</a
    >
    <a
      class="bg-white text-sm rounded font-medium px-12 py-2 transition-colors hover:bg-black hover:text-white inline-flex justify-center items-center text-black"
      href="#"
    >
      Saber más</a
    >
  </div>

  <img
    slot="background"
    alt="Model basic"
    class="h-full w-full object-cover object-center"
    src="basic-v1.png"
    id="bg-image-models"
  />
</Section>

<script>
  function isEdge() {
    if (
      navigator.userAgent.indexOf("Edge") > -1 ||
      navigator.userAgent.indexOf("Edg") > -1
    ) {
      return true;
    } else {
      return false;
    }
  }

  let imageElement = document.querySelector("#bg-image-models") as HTMLImageElement; // TypeScript

  if (isEdge()) {
    imageElement.src = "model-s.webp";
  } else {
    imageElement.src = "basic-v1.png";
  }
</script>